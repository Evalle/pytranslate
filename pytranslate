#!/usr/bin/python
#version = 0.1
# global imports:
from __future__ import print_function
from yandex_translate import YandexTranslate
from sys import argv

user_input = argv[1]

# local imports
from apikey import key

translate = YandexTranslate(key)

lang = translate.detect(user_input)

# dirty hack, we don't need another lang except en and ru
def invert_lang(lang):
    lang = str(lang)
    if lang == 'ru':
        trlang = 'en'
    elif lang == 'en':
        trlang = 'ru'
    else:
        trlang == 'unknown'
    return trlang

print(translate.translate(user_input, invert_lang(lang)))
