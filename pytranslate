#!/usr/bin/python

# global imports:
from __future__ import print_function
from yandex_translate import YandexTranslate
from sys import argv

user_input = argv[1]

# local imports
from apikey import key

translate = YandexTranslate(key)

lang = translate.detect(user_input)

def convert(lang):
    if lang == u'en':
        lang = 'en'
    elif lang == u'ru':
        lang = 'ru'
    else:
        lang = 'unknown'
    return lang

print(translate.translate(user_input, lang))
